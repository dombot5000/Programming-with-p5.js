var x = 0;
var speed = 3; // speed variable

function setup() { //function happens only once at start to create the canvas
  createCanvas(600, 400);
}

function draw() { //draw is in a loop
  background(0); 
  stroke(255);
  strokeWeight(4);
  noFill();
  ellipse(x,200,100,100);   
  
  if (x > width) {
    speed = -3; //if x is greater than width then speed goes to negative 3
    
  }
    x = x + speed

}
